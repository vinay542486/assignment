boolean build=true
pipeline{
    agent any

    stages{
        stage('A'){
            steps{
            script{
                try{
                echo 'Stage A is Running succesfully'
                    //sh 'exit 1'
            }catch(Exception e){
                echo 'Stage A is Failed'
                build=false
            }
            }
        }
        }

        stage('B'){
            when {
                expression {
                    build == true
                }
            }
            steps{
                echo 'Stage B is executed'
            }
        }

        stage('C'){
            when {
                expression {
                    build == false
                }
            }
            steps{
                echo 'Stage C is ececuted'
            }
        }
    }
}
